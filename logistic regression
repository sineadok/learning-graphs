url <- "https://raw.githubusercontent.com/StatQuest/logistic_regression_demo/master/processed.cleveland.data"

data <- read.csv(url, header=FALSE)
#saying header = TRUE is saying yes, header=FALSE, is saying dont consider first row headers

head(data) 
#first six rows?

#c makes things a vector like a list or 
colnames(data) <- c(
  "age",
  "sex",
  "cp",
  "trestbps",
  "chol",
  "fbs",
  "restecg",
  "thalach",
  "exang",
  "oldpeak",
  "slope",
  "ca",
  "thal",
  "hd"
)

str(data)
#str shows the structure of the data, and it shows that sex is a number, one is a ?, so need to clean up

data[data == "?"] <- NA

#this takes every data point that is ? and makes it NA
#data[ data$COLUMN == CONDITION , "COLUMN" ] <- NEW_VALUE

data[data$sex == 0,]$sex <- "F"
data[data$sex == 1,]$sex <- "M"

#$ pulls out a column
#changing a column into a factor does what- 
#anythign nto a factor is anything not a categorical factor, makes them model friendly ie binary
#but maybe smth like numerical quantities shouldn't be made a factor
data$sex <- as.factor(data$sex)
data$cp <- as.factor(data$cp)
data$fbs <- as.factor(data$restecg)
data$exang <- as.factor(data$exang)
data$slope <- as.factor(data$slope)

# 2. Convert to integer
data$ca <- as.integer(data$ca)

# 3. Convert to factor (categorical variable)
data$ca <- as.factor(data$ca)
data$thal[data$thal == "?"] <- NA
data$thal <- as.integer(data$thal)
data$thal <- as.factor(data$thal)

#make sure you use == instead of =
#convert numbers to words
data$hd <- ifelse(test=data$hd == 0, yes="Healthy", no="Unhealthy")
data$hd <- as.factor(data$hd)

str(data)

# to show how many rows have na in them
nrow(data[is.na(data$ca) | is.na(data$thal), ])

data[is.na(data$ca) | is.na(data$thal),]

nrow(data)

#removes the nas
data <- data[!(is.na(data$ca) | is.na(data$thal)),]
